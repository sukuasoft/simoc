            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"DEVICE_ID_HERE\",\n  \"type\": \"DEVICE_DOWN\",\n  \"channel\": \"SMS\",\n  \"recipient\": \"+5511999999999\",\n  \"message\": \"ALERTA: Router Principal offline!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/alerts",
              "host": ["{{baseUrl}}"],
              "path": ["alerts"]
            },
            "description": "Envia um alerta por SMS"
          },
          "response": []
        },
        {
          "name": "Listar Todos Alertas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/alerts",
              "host": ["{{baseUrl}}"],
              "path": ["alerts"]
            },
            "description": "Lista todos os alertas do sistema"
          },
          "response": []
        },
        {
          "name": "Alertas por Dispositivo",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/alerts/device/:deviceId",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "device", ":deviceId"],
              "variable": [
                {
                  "key": "deviceId",
                  "value": "DEVICE_ID_HERE"
                }
              ]
            },
            "description": "Lista alertas de um dispositivo específico"
          },
          "response": []
        },
        {
          "name": "Alertas Pendentes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/alerts/status/PENDING",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "status", "PENDING"]
            },
            "description": "Lista alertas com status pendente"
          },
          "response": []
        },
        {
          "name": "Alertas Enviados",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/alerts/status/SENT",
              "host": ["{{baseUrl}}"],
              "path": ["alerts", "status", "SENT"]
            },
            "description": "Lista alertas já enviados"
          },
          "response": []
        }
      ]
    }
  ]
}
